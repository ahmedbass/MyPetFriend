<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_deal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahmedbass.mypetfriend.AdvertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/advert_images"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/dog_img"
            android:background="@android:color/darker_gray"
            android:padding="3dp"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:layout_margin="5dp"/>

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:scaleX=".8"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Information"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="2"
            android:layout_gravity="center"
            android:background="@android:color/background_light"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pet Type: "
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pet Breed:"
                android:id="@+id/textView5"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pets Age:"
                android:id="@+id/textView6"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_column="0" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Microchipped:"
                android:id="@+id/textView7"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Neutered:"
                android:id="@+id/textView8"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vaccinations:"
                android:id="@+id/textView9"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_type_txt"
                android:text="Enter Pet Type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_column="1"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_breed_txt"
                android:text="Enter Pet Breed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_Age_txt"
                android:text="Enter Pets Age"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_microchipped_txt"
                android:text="Is Microchipped?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_neutered_txt"
                android:text="Is Neutered?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet_vaccination_txt"
                android:text="Is Vaccinated?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:layout_column="1"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Details"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/advert_details_txtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@android:color/background_light"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Long or short paragraph to describe
            \ncomprehensively the deal and the available pets and/or tools offered
             \nin it. it can be as long as the user wants, they can
              \nwrite anything here, really it's a long paragraph."
            android:elevation="2dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact the Seller"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@android:color/background_light"
            android:elevation="2dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/seller_username_txtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller Username"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/seller_location_txtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City, Country"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <Button
                android:id="@+id/call_seller_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: +966123456789"
                android:background="@color/colorAccent"
                android:textColor="@color/primaryTextWhite"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/email_seller_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: selleremail@email.com"
                android:background="@color/colorAccent"
                android:textColor="@color/primaryTextWhite"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
