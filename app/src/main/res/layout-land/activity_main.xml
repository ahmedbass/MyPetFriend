<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.ahmedbass.mypetfriend.MainActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/my_pets_btn"
            style="@style/iconStyle_MainScreen"
            android:src="@drawable/ic_my_pets"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="2dp"
            android:onClick="moveToActivity"
            android:elevation="4dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:contentDescription="My Pets" />

        <TextView
            android:text="My Pets"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center|bottom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pet_places_btn"
            style="@style/iconStyle_MainScreen"
            android:src="@drawable/ic_find_pet_places"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="2dp"
            android:onClick="moveToActivity"
            android:elevation="4dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:contentDescription="Pet Places" />

        <TextView
            android:text="Pet Places"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center|bottom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/petServices_btn"
            style="@style/iconStyle_MainScreen"
            android:src="@drawable/ic_pet_services"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="2dp"
            android:onClick="moveToActivity"
            android:elevation="4dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:contentDescription="Pet Care Services" />

        <TextView
            android:id="@+id/textView3"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Care Service"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center|bottom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/pet_shop_btn"
            style="@style/iconStyle_MainScreen"
            android:src="@drawable/ic_pet_shop"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_marginBottom="2dp"
            android:onClick="moveToActivity"
            android:elevation="4dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:contentDescription="Pet Market" />

        <TextView
            android:text="Pet Market"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center|bottom" />
    </LinearLayout>

</LinearLayout>